extends layout
block append links    
    link(rel='stylesheet', href='/stylesheets/forms.css')

block content
    div.container        
        h1.text-center Sign In
        form(method='POST' style="margin-left:15%;margin-right:15%;padding:10px;margin-bottom:5%" action='/users/login').form
            #form-group
                label User Name:
                input.form-control(name='username',type='text' required)        

            #form-group
                label Password:
                input.form-control(name='password',type='password' required)            
            br
            input.btn.btn-primary(type='submit',value='Submit')
            br
            hr
            p If you dont have an account <a href="/users/signup">Sign Up</a>                                

                
                  